<!-- rounded_transparent_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Transparent background -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="5dp" /> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>
    <item>
        <!-- Border -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
            android:color="#f1f1f1"
            />
            <corners android:radius="5dp" /> <!-- Match the radius for rounded corners -->
        </shape>
    </item>
</layer-list>
