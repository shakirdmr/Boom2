<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent"
    tools:context=".activities.forgotPassword.emailSent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/goBackHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_keyboard_backspace_24" />


        <TextView
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/knickknack_regular"
            android:text="ðŸ“¨ Check Email,"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/otpEMAIL"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="we sent an email to "/>


        <TextView
            android:textStyle="bold"
            android:id="@+id/recipientEmail"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shakir@gmail.com"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please check the email app and reset your password by clicking the link in mail. \nIf you did then login below"/>


        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >



            <Button
                android:id="@+id/loginActivity"
                android:fontFamily="@font/poppins_light"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#e1e1e1"
                android:textColor="@color/black"
                android:layout_gravity="end"
                android:text="Login Now"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>