<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Boom"
        tools:targetApi="31">
        <activity
            android:name=".activities.forgotPassword.emailSent"
            android:exported="false" />
        <activity
            android:name=".activities.forgotPassword.setNewPassword"
            android:exported="false" />
        <activity
            android:name=".activities.forgotPassword.otpVerify_resetAccount"
            android:exported="false" />
        <activity
            android:name=".activities.forgotPassword.ResetPassword"
            android:exported="false" />
        <activity
            android:name=".activities.otpVerify_newAccount"
            android:exported="false" />
        <activity
            android:name=".activities.create_new_account"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activities.login_signup"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>